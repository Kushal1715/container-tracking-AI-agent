# PNCT Container Query System - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# AI Agent Configuration
# ============================================

# Google Gemini API Key (Required)
# Get your free API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Service URLs and Ports
# ============================================

# MCP Tool Server URL (default: http://localhost:8001)
# Used by Container Agent to call MCP tools
MCP_SERVER_URL=http://localhost:8001

# MCP Tool Server Port (default: 8001)
MCP_SERVER_PORT=8001

# PNCT Scraper API URL (default: http://localhost:8002)
# Used by MCP Tool Server to forward requests
PNCT_SCRAPER_API_URL=http://localhost:8002

# Scraper API Port (default: 8002)
SCRAPER_API_PORT=8002

# ============================================
# Temporal Configuration
# ============================================

# Temporal Server Host (default: localhost:7233)
# Start Temporal server with: temporal server start-dev
TEMPORAL_HOST=localhost:7233

# Temporal Namespace (default: default)
TEMPORAL_NAMESPACE=default

# Temporal Task Queue (default: pnct-scraper-queue)
# Workers listen on this queue for workflow tasks
TEMPORAL_TASK_QUEUE=pnct-scraper-queue

# ============================================
# Optional: Logging Configuration
# ============================================

# Log Level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO
